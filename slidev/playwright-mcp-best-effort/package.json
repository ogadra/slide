{
  "name": "playwright-mcp-best-effort",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "author": "ogadra",
  "scripts": {
    "build": "npm run build:slidev && npm run build:copy",
    "build:copy": "cp -r ./slides-export ../../dist/playwright-mcp-best-effort",
    "build:slidev": "slidev build --base /playwright-mcp-best-effort/ --out ../../dist/playwright-mcp-best-effort",
    "dev": "slidev --open",
    "export": "slidev export",
    "export:png": "slidev export --format png"
  }
}