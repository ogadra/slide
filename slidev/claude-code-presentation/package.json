{
  "name": "claude-code-presentation",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "author": "ogadra",
  "scripts": {
    "build": "npm run build:slidev && npm run build:copy",
    "build:copy": "cp -r ./slides-export ../../dist/claude-code-presentation",
    "build:slidev": "slidev build --base /claude-code-presentation/ --out ../../dist/claude-code-presentation",
    "dev": "slidev --open",
    "export": "slidev export",
    "export:png": "slidev export --format png"
  }
}